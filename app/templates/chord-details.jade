.container.ng-cloak
  ol.breadcrumb
    li: a(href='http://osteele.github.io/#music') Music
    li: a(href='#') Chords
    li {{chord.fullName}}

  isotope-container#voicings
    .chord-diagram(ng:repeat="fingering in fingerings", isotope-item)
      h4(ng-bind-html="fingering.chordName | raiseAccidentals")
      chord(chord="chord", fingering="fingering")
      ul.nav.nav-pills.nav-stacked
        li(ng:repeat="label in fingering.labels", ng:click="orderBy(label.name)", ng:class="{active: label.name == sortKey}")
          | {{label.name}}
          .badge {{label.badge}}
