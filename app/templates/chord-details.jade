.container.ng-cloak
  ol.breadcrumb
    li: a(href='#') Chords
    li {{chord.fullName}}

  .chord-diagram(ng:repeat="fingering in fingerings")
    div {{$index + 1}}
    chord(chord="chord", fingering="fingering")
    ul.nav.nav-pills.nav-stacked
      li.active(ng:repeat="label in fingering.labels") {{label.name}}
        .badge {{label.badge}}
